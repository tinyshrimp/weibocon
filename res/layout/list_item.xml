<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:weightSum="1"
  >
    <FrameLayout android:id="@+id/pnl_UserTag" android:layout_width="wrap_content" android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_UserHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/portrait" >
</ImageView>

        <ImageView
            android:id="@+id/img_ConfirmTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/portrait_v_blue" >
</ImageView>    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:weightSum="1" android:layout_height="wrap_content" android:id="@+id/pnl_WeiboDetail" android:paddingLeft="5dip" android:paddingRight="5dip">
        <LinearLayout android:layout_width="match_parent" android:weightSum="1" android:layout_height="29dp" android:id="@+id/pnl_WeiboHeader">
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="youli2001" android:layout_gravity="center_vertical|left" android:id="@+id/txt_UserName" android:textStyle="bold" android:textColor="#000000"></TextView>
            <LinearLayout android:layout_height="match_parent" android:layout_width="wrap_content" android:layout_weight="1.0" android:gravity="center_vertical|right" android:id="@+id/pnl_WeiboTag">
                <ImageView android:scaleType="fitXY" android:id="@+id/img_PicTag" android:src="@drawable/pictag" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
                <TextView android:text="3分钟前" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txt_CreateTime" android:textSize="12dip" android:textColor="#cc9e00" android:layout_marginLeft="5dip"></TextView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_WeiboContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="0.32"
            android:text="TextView"
            android:textColor="#000000" >
</TextView>

        <LinearLayout
            android:id="@+id/pnl_TransferWeibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="@drawable/redirect_bg"
            android:orientation="vertical">

            <TextView android:layout_height="wrap_content" android:text="TextView" android:layout_width="match_parent" android:id="@+id/txt_TransferContent" android:textColor="#000000"></TextView>
            <ImageView android:src="@drawable/ic_launcher" android:scaleType="center" android:layout_height="wrap_content" android:id="@+id/img_TransferPic" android:layout_width="wrap_content"></ImageView>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_WeiboPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_launcher" >
</ImageView>

        <LinearLayout
            android:id="@+id/pnl_WeiboFooter"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_gravity="bottom" >

            <TextView
                android:id="@+id/txt_ClientTag"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="来自：HTC客户端"
                android:textColor="#000000"
                android:textSize="10dip" >

</TextView>
            <LinearLayout android:layout_height="match_parent" android:gravity="center_vertical|right" android:layout_width="wrap_content" android:layout_weight="1.0" android:weightSum="1" android:id="@+id/pnl_Summary">
                <ImageView android:scaleType="center" android:layout_width="21dp" android:layout_height="14dp" android:id="@+id/img_TransferTimes" android:src="@drawable/redirect_icon"></ImageView>
                <TextView android:text="11" android:textAppearance="?android:attr/textAppearanceSmall" android:layout_height="wrap_content" android:id="@+id/txt_TransferTimes" android:textSize="10dip" android:layout_width="wrap_content" android:layout_marginRight="5dip" android:textColor="#000000"></TextView>
                <ImageView android:scaleType="center" android:layout_width="21dp" android:layout_height="14dp" android:id="@+id/img_CommentTimes" android:src="@drawable/comment_icon"></ImageView>
                <TextView android:text="120" android:textAppearance="?android:attr/textAppearanceSmall" android:layout_height="wrap_content" android:id="@+id/txt_CommentTimes" android:textSize="10dip" android:layout_width="wrap_content" android:textColor="#000000"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
